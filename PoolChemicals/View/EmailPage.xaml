<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"             
            xmlns:viewmodel="clr-namespace:PoolChemicals.ViewModel"  
            xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"  
            xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"  
            x:Class="PoolChemicals.View.EmailPage"  
            x:DataType="viewmodel:EmailViewModel"
            Shell.NavBarIsVisible="{Binding IsValid}"
            Title="EmailPage">  
   <VerticalStackLayout>  
       <Label   
           Text="Comments or Bug Reports"  
           VerticalOptions="Center"   
           HorizontalOptions="Center" />  
       <buttons:SfCheckBox x:Name="checkBox" IsChecked="{Binding SendData}" Text="Included readings"/>
        <inputLayout:SfTextInputLayout Hint="Email Message">
            <Editor  
                Text="{Binding EmailBody}"
                AutoSize="TextChanges"/>
        </inputLayout:SfTextInputLayout>
        <Grid ColumnDefinitions="*,*"
              RowDefinitions="*,*"
              RowSpacing="10"
              ColumnSpacing="10">
            <Button Text="Clear Editor" 
                    Grid.Row="0"
                    Grid.Column="0"
               Command="{Binding ClearEditorCommand}"/>
            <Button Text="Get Test Data" 
                    Grid.Row="0"
                    Grid.Column="1"
               Command="{Binding CompileDataCommand}"/>            
            <Button Text="SendEmail" 
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
               Command="{Binding SendItCommand}"/>
            <!--<VerticalStackLayout IsVisible="true">
            <Label Text="{Binding WaterTemp}"/>
            <Label Text="{Binding SaltReading,StringFormat='Salt={0}'}"/>
            <Label Text="{Binding FCReading}"/>
            <Label Text="{Binding PHReading}"/>
            <Label Text="{Binding AlkalineReading}"/>
            <Label Text="{Binding CalciumReading}"/>
            <Label Text="{Binding CYAReading}"/>
            <Label Text="{Binding BorateReading}"/>
        </VerticalStackLayout>-->
        </Grid>
    </VerticalStackLayout>  
</ContentPage>